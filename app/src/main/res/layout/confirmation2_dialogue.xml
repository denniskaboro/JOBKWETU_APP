<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center"
        android:text="Confirmation Form"
        android:textColor="#F33310"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:text="Tasks:-"
            android:textColor="#0F0101" />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/dialoguetask"
            android:hint="task"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/confirm_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:textAlignment="textStart"
        android:text="Jobber"
        android:textColor="#0F0101" />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:id="@+id/dialoguetime"
            android:hint="jobber"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textAlignment="textStart"
            android:text="Date of work:-"
            android:textColor="#0F0101" />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:id="@+id/dialogueday"
            android:hint="date"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textAlignment="textStart"
            android:text="Subcounty:-"
            android:textColor="#0F0101" />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:id="@+id/dialoguesubcounty"
            android:hint="subcounty"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textAlignment="textStart"
            android:text="Location:-"
            android:textColor="#0F0101" />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:id="@+id/dialoguelocation"
            android:hint="location"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Title:-"
            android:textColor="#0F0101" />
        <TextView
            android:layout_width="match_parent"
            android:hint="title"
            android:id="@+id/dialoguetitle"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Description:-"
            android:textColor="#0F0101" />
        <TextView
            android:layout_width="match_parent"
            android:hint="description"
            android:id="@+id/dialoguedescription"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_margin="10dp"
            android:elevation="6dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CANCEL "
                android:padding="5dp"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="24sp" />


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/accept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_margin="10dp"
            android:elevation="6dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ACCEPT"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="24sp" />


        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>